<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dongnao.workbench.subject.dao.SubjectMapper">
	<resultMap id="BaseResultMap" type="com.dongnao.workbench.subject.model.Subject">
		<id column="id" property="id" jdbcType="VARCHAR" />
															<result column="NAME" property="name" jdbcType="VARCHAR" />
													<result column="creatDate" property="creatdate" jdbcType="TIMESTAMP" />
									</resultMap>
	<sql id="Base_Column_List">
						 	id
										,NAME
										,creatDate
						</sql>
	
	<select id="getByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from subject
		where id = #{id,jdbcType=VARCHAR}
	</select>
	
	<select id="listByCondition" resultMap="BaseResultMap" parameterType="com.dongnao.workbench.subject.model.Subject">
		select
		<include refid="Base_Column_List" />
		from subject
		where 1=1
		<if test="id != null and '' != id">  
			and id = #{id,jdbcType=VARCHAR}
		</if>
		<if test="name != null and '' != name">  
			and NAME = #{name,jdbcType=VARCHAR}
		</if>
		<if test="null != propsMap.startDate and propsMap.startDate != ''">
				<![CDATA[
				and DATE_FORMAT(creatDate,'%Y-%c-%d') >= DATE_FORMAT(#{propsMap.startDate,jdbcType=TIMESTAMP},'%Y-%c-%d')
				]]>
		</if>
		<if test="null != propsMap.endDate and propsMap.endDate != ''">
				<![CDATA[
					and DATE_FORMAT(creatDate,'%Y-%c-%d') <= DATE_FORMAT(#{propsMap.endDate,jdbcType=TIMESTAMP},'%Y-%c-%d')
				]]>
		</if>
				<if test="orderFields != null and '' != orderFields">  
           	order by ${orderFields} ${order}
         	</if>
	</select>
	
	<delete id="deleteByKey" parameterType="java.lang.String">
		delete from subject
		where id = #{id,jdbcType=VARCHAR}
	</delete>
	
	<insert id="add" parameterType="com.dongnao.workbench.subject.model.Subject">
		insert into subject (
		<include refid="Base_Column_List" />
		)values (
										#{id,jdbcType=VARCHAR}
														,#{name,jdbcType=VARCHAR}
														,#{creatdate,jdbcType=TIMESTAMP}
									)
	</insert>
	
	<update id="update" parameterType="com.dongnao.workbench.subject.model.Subject">
		update subject  set
		ID= #{id,jdbcType=VARCHAR}
													,NAME = #{name,jdbcType=VARCHAR}
											,creatDate = #{creatdate,jdbcType=TIMESTAMP}
							where id = #{id,jdbcType=VARCHAR}
	</update>
</mapper>
